# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=qwerty123
DB_NAME=malleco  # 使用默认的mysql数据库
DB_CHARSET=utf8mb4
DB_SYNCHRONIZE=false
DB_LOGGING=false
# 数据库连接池配置
DB_CONNECTION_LIMIT=20
DB_MAX_POOL_SIZE=50
DB_IDLE_TIMEOUT=30000
DB_ACQUIRE_TIMEOUT=60000
DB_REAP_INTERVAL=1000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=10000
REDIS_LIFO=true
REDIS_MAX_RETRIES_PER_REQUEST=3

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_ITEMS=10000
CACHE_CHECK_PERIOD=600

# 性能优化配置
MAX_REQUEST_SIZE=10mb
COMPRESSION_THRESHOLD=1kb
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=1000

# JWT配置
JWT_SECRET=MallEcoJwtSecretKey123456
JWT_EXPIRATION=7d

# Elasticsearch配置
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=malleco
ELASTICSEARCH_PASSWORD=malleco

# Server Config
PORT=9000
HOST=0.0.0.0
SERVICE_NAME=malleco-api
SERVICE_ADDRESS=localhost

# Consul Config
CONSUL_HOST=localhost
CONSUL_PORT=8500

# RabbitMQ Config
# 启用RabbitMQ功能 (true/false)
RABBITMQ_ENABLED=false
# RabbitMQ服务器连接URL
RABBITMQ_URL=amqp://localhost:5672
# RabbitMQ队列名称
RABBITMQ_QUEUE=malleco_queue