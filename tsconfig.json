{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src/modules/promotion",
    "src/modules/promotion.disabled",
    "src/modules/products",
    "src/modules/statistics",
    "src/modules/distribution",
    "src/modules/live",
    "src/modules/order",
    "src/modules/member",
    "src/modules/goods",
    "src/modules/wallet",
    "src/modules/payment",
    "src/modules/aftersale",
    "src/modules/logistics",
    "src/modules/evaluation",
    "src/modules/points",
    "src/modules/product",
    "src/modules/microservices",
    "src/modules/service-mesh",
    "src/modules/cache",
    "src/modules/database",
    "src/modules/system",
    "src/modules/recommendation"
  ]
}
